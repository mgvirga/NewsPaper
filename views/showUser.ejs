<html class="cool">
    <header>
        <%- include('navigationHeader') -%>
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
    </header>
    <head>
        <h1>Users</h1>
        <style>
            body {
            background-image: linear-gradient(yellow, deepskyblue);
            color: black;
            padding: 5px;
            }
            table{
            border: 1px solid black;
            padding: 3px;
            width: 100%;
            }
            td, th {
            border: 1px solid black;
            padding: 3px;
            columns: 150px;
            }
        </style>
    </head>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Edit/Delete</th>
                
            </tr>
        </thead>
        <tbody>
            <% posts.forEach(function(post){ %>
                <tr>
                    <td><%=post._id%></td>
                    <td><%=post.name%></td>
                    <td><%=post.username%></td>
                    <td>
                        <button name="edit" onclick="location.href='/editUser/<%= post._id %>'">Edit</button>
                        <button name="delete" onclick="deleteAlert('/showUser/delete/<%= post._id %>')">Delete</button>
                
                <script>
                    function deleteAlert(url)
                    {
                        var c = confirm("Do you want to delete news?")
                        if (c) {
                            return location.href=url;
                        }
                    }
               </script>
                    </td>
                </tr>
            <%});%>
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#display').DataTable();
        });
    </script>
</body>
  <%- include('footer') -%>
</html>
<html class="cool">
    <header>
        <%- include('navigationHeader') -%>
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
    </header>
    <head>
        <h1>Please enter the new user</h1>
        <style>
            .cool{ background-image: linear-gradient(white, blue) !important;}
            table 
            {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td, th 
            {
                border: 5px solid black;
                text-align: left;
                padding: 20px;
            }
        </style>
    </head>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Username</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        <% posts.forEach(function(post){ %>
            <tr>
                <th><%=post.title%></th>
                <th><%=post.username%></th>
                <th><%=post.password%></th>
            </tr>
        <%});%>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#display').DataTable();
    });
</script>
<style>
    html, body
    {
      height: 100%;
      background-image: url("https://www.pcgamesn.com/wp-content/uploads/2019/01/relaxing-games.jpg");

      /* Full height */
      height: 100%;

      /* Center and scale the image nicely */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>
   <footer>
    <%- include('chat') -%>
</footer>
</html>